{
  "name": "all",
  "version": "1.0.0",
  "description": "Create a promise from any javascript collection/map that contains Promises",
  "main": "build/index.js",
  "scripts": {
    "compile": "babel src -d build",
    "postinstall": "npm run compile",
    "test": "mocha -r babelhook",
    "coverage": "mocha -r babelhook -r blanket -R mocha-lcov-reporter | ./node_modules/coveralls/bin/coveralls.js",
    "hcoverage": "mocha -r babelhook -R html-cov >| coverage.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/romeovs/all.git"
  },
  "keywords": [
    "promise",
    "immutable"
  ],
  "author": "Romeo Van Snick <romeovs@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "babel": "^4.7.16",
    "blanket": "git://github.com/alex-seville/blanket",
    "chai": "^2.2.0",
    "chai-as-promised": "^4.3.0",
    "coveralls": "^2.11.2",
    "immutable": "^3.7.1",
    "mocha": "^2.2.1",
    "mocha-lcov-reporter": "0.0.2"
  },
  "config": {
    "blanket": {
      "pattern": "build"
    }
  }
}
